<p style="color: green"><%= notice %></p>

<%#= render @list %>

<div class="grid gap-4">

  <div class="banner" style="background-image: url('<%= @list.image_url  %>')">
    <h2 class="text-5xl font-bold text-white"><%= @list.name  %></h2>
  </div>
  <div class="container mx-auto">
    <div class="flex justify-end">
      <%= link_to "Add movies", new_bookmark_path(list_id: @list.id), class: "bg-green-400 p-4 rounded text-white"  %>
    </div>
  </div>
  <div class="container mx-auto">
    <div class="grid grid-cols-2 gap-5">
    <% @list.bookmarks.each do |bookmark|  %>
      <div class="shadow-2xl">
        <div class="banner h-60" style="background-image: url('<%= bookmark.movie.poster_url %>')"></div>
        <div class="p-3">
          <div class="flex justify-left items-center">
            <h2 class="font-bold mr-2"><%= bookmark.movie.title %></h2><%= bookmark.movie.rating %><i class="fa-solid fa-star text-yellow-500"></i>
          </div>
          <p class="text-sm"><%= bookmark.movie.overview %> </p>
          <div class="flex">
            <span class="flex-grow"><%= bookmark.comment %></span>
            <%= link_to "Delete", bookmark_path(bookmark),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this bookmark?" },
              class: "btn btn-danger self-end" %>

          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
